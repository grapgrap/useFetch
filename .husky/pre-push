#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo '🏗️ 👷 Pre-push Check'

echo '🏗️ 👷 Checking dirties...'

git diff HEAD --quiet || (
    echo '❌ ❌ ❌ You have un-committed changes ❌ ❌ ❌';
    false;
)

echo '🏗️ 👷 Type Checking...'

yarn type || (
  echo '❌ ❌ ❌ Type check Failed ❌ ❌ ❌'
)

echo '🏗️ 👷 Testing...'

yarn test || (
  echo '❌ ❌ ❌ Build Failed ❌ ❌ ❌'
)

echo '✅ ✅ ✅ All passed. Pushing them. ✅ ✅ ✅'